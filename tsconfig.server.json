{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": ".",
    "rootDirs": ["."],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "server/**/*.ts",
    "server/workers/*.worker.ts",
    "server/types/**/*.d.ts",
    "lib/types/**/*.ts",
    "types/**/*.ts",
    "**/*.d.ts",
    "lib/prompts.ts",
    "lib/presets/agents.ts",
    "src/vite-env.d.ts",
    "scripts/**/*.ts",
    "vite-env.d.ts",
    "src/types/**/*.d.ts",
    "server/types/**/*.d.ts"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "server/workers/*.worker.ts"
  ]
}