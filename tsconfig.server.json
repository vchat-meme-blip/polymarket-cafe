{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist/server",
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "server/**/*.js",
    "server/**/*.jsx",
    "server/**/*.json",
    "server/**/*.node",
    "server/workers/**/*.ts",
    "lib/types/**/*.ts",
    "lib/prompts.ts",
    "lib/presets/agents.ts",
    "scripts/**/*.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist"
  ]
}