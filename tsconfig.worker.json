{
  "extends": "./tsconfig.server.json",
  "compilerOptions": {
    "outDir": "./dist/server/workers",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "server/workers/*.worker.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}